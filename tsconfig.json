{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "es2023",
    "module": "nodenext",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowImportingTsExtensions": true
  }
}
